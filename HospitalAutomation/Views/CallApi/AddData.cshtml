@model EntityLayer.Concrete.Gallery
@{
    ViewData["Title"] = "AddData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class=" container mx-auto row bg-light py-4">
    <div class="col-md-4 mx-auto">
        <h4><strong>@_localization.Getkey("str_Gallery") - @_localization.Getkey("str_NewData")</strong></h4>
        <hr />
        <form asp-action="AddData" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group py-2">
                <label class="control-label">@_localization.Getkey("str_PhotoName")</label>
                <input asp-for="@Model.PhotoName" class="form-control" />
                <span asp-validation-for="PhotoName" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <label class="control-label">@_localization.Getkey("str_Image")</label>
                <input asp-for="@Model.PhotoImage" type="file" name="file" class="form-control" />
                <span asp-validation-for="PhotoImage" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <input type="submit" value="@_localization.Getkey("str_Add")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

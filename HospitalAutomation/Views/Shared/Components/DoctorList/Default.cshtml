@using EntityLayer.Concrete
@model List<Doctor>

@foreach (var item in Model)
{
    <table class="table border">
        <tr>
            <td class="col-2 text-center">
                <img src="@item.Image" width="100px" style="padding:0px; margin:0px;" />
            </td>
            <td>
                <div class="row" style="border-bottom:1px solid black;">
                    <div class="text-start col">
                        <strong>ID :</strong> @item.DoctorID
                    </div>
                    <div class="text-center col">
                        <strong>Name - Surname :</strong> @item.DoctorName
                    </div>
                    <div class="text-end col">
                        <strong>Department :</strong> @item.Department.DepartmentName
                    </div>
                </div>
                <div class="row">
                    @item.DoctorAbout
                </div>
            </td>
            <td class="col-2 text-center">
                <div class="row p-1">
                    <a href="/AdminPanel/DoctorEdit/@item.DoctorID" class="btn btn-primary">Edit</a>
                </div>
                <div class="row p-1">
                    <a href="/AdminPanel/DoctorDelete/@item.DoctorID" class="btn btn-danger">Delete</a>
                </div>
            </td>
        </tr>


    </table>
}
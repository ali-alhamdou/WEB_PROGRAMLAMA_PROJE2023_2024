@using EntityLayer.Concrete
@model List<Doctor>

<table class="table">
    <tr>
        <th>Name</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><span hidden name="DoctorID"></span>@item.DoctorName</td>
            <td><a href="/Reservation/Index/@item.DepartmentID" class="btn btn-warning">Choose</a></td>
        </tr>
    }
</table>

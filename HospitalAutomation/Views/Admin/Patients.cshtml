@model IEnumerable<EntityLayer.Concrete.Patient>
@{
    ViewData["Title"] = "Patients";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

<h4><strong>@_localization.Getkey("str_Patients")</strong></h4>
<hr />

<table class="table table-bordered">
    <tr>
        <th>
            #
        </th>
        <th>
            @_localization.Getkey("str_NameSurname")
        </th>
        <th>
            E-Mail
        </th>
        <th>
        </th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                @item.PatientId
            </td>
            <td>
                @item.PatientName
            </td>
            <td>
                @item.Mail
            </td>
            <td>
                <a href="/Admin/AddDoctor/@item.PatientId" class="btn btn-outline-success"><strong>@_localization.Getkey("str_Doctor") @_localization.Getkey("str_Add")</strong></a>
            </td>
        </tr>
    }
</table>


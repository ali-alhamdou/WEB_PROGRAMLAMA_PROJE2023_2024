@using EntityLayer.Concrete
@model List<Home>
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

<a href="/Admin/NewData" class="btn btn-success text-white">@_localization.Getkey("str_Add") - @_localization.Getkey("str_NewData")</a>
<hr />
<h4><strong>@_localization.Getkey("str_EditHome")</strong></h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {

            <div class="col-2 m-1 py-2 px-3 bg-white border border-dark text-center">
                <img src="@item.Image" width="50px" />
                <hr />
                <strong>@item.Title</strong>
                <br />
                <i>@item.CreationDate.ToShortDateString()</i>
                <hr />
                <a class="btn btn-outline-primary" href="/Admin/CheckDetail/@item.Id">@_localization.Getkey("str_SeeMore")</a>
            </div>

        }
    </div>
</div>